<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ppp.wordplay"
    android:versionName="4.2a"
    android:versionCode="18"
    android:installLocation="auto">

    <application 
    	android:label="@string/app_name"
    	android:description="@string/app_description"
    	android:hasCode="true"
    	android:persistent="false"
    	android:allowClearUserData="true"
    	android:icon="@drawable/ic_launcher_wordplay_assistant"
    	android:name="com.ppp.wordplayadvlib.WordPlayApp"
        android:theme="@style/AppTheme">

		<activity
	      	android:name=".WordPlayPaid"
			android:label="@string/app_name"
			android:launchMode="singleTask">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name="com.ppp.wordplayadvlib.activities.SearchActivity"/>
		<activity android:name="com.ppp.wordplayadvlib.activities.HelpViewer"/>
		<activity android:name="com.ppp.wordplayadvlib.activities.SearchHistoryActivity"/>
		<activity android:name="com.ppp.wordplayadvlib.activities.UserPreferenceActivity"/>
		
		<!-- Google AdMob Stuff -->

		<meta-data
			android:name="ADMOB_PUBLISHER_ID"
			android:value="a14d57787867bd1"/>

		<activity
			android:name="com.google.ads.AdActivity"
			android:configChanges="orientation|keyboard|keyboardHidden"/>

    </application>

	<uses-sdk android:minSdkVersion="8"/>

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-feature android:name="android.hardware.touchscreen" android:required="false"/> 

</manifest> 