<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

	    <TextView
	        style="@style/AboutText"
	        android:id="@+id/release_notes"
	        android:text="@string/release_notes_text" />
	
		<ImageView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:scaleType="fitXY"
		    android:src="@drawable/rowseparator" />
	
		<TextView
		    style="@style/AboutText"
		    android:id="@+id/contact_us"
		    android:text="@string/contact_us_text" />
	
		<ImageView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:scaleType="fitXY"
		    android:src="@drawable/rowseparator" />

		<TextView
		    style="@style/AboutText"
		    android:id="@+id/version"
		    android:text="Version Goes Here" />
	
		<ImageView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:scaleType="fitXY"
		    android:src="@drawable/rowseparator" />

		<TextView
		    style="@style/AboutText"
		    android:id="@+id/copyright"
		    android:text="Copyright Goes Here" />

	</LinearLayout>

</ScrollView>
