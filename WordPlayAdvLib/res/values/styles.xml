<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

 	<style name="AppTheme" parent="@style/Theme.AppCompat" />

    <style name="TabStyle">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="MenuDrawerTitle">
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">12dip</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">12dip</item>
    </style>

    <style name="AboutText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/list_item</item>
    </style>
 	
	<style name="DialogStyle" parent="@android:style/Theme.Dialog">
	    <item name="android:colorBackground">@color/white</item>
	</style>

	<style name="DialogHeader">
	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
	</style>

</resources>