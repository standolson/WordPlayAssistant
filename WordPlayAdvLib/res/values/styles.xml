<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.MyCustom.ActionBar</item>
        <item name="actionBarSize">55dip</item>
	</style>

    <style name="Widget.MyCustom.ActionBar" parent="Widget.Sherlock.ActionBar">
	</style>

    <style name="TabStyle">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

	<style name="Widget.MyCustom.ActionButton" parent="Widget.Sherlock.ActionButton">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="MenuDrawerTitle">
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">12dip</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">12dip</item>
    </style>
	
</resources>